<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/bastilleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/dalmatianButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_bastille"
        android:contentDescription="@string/Bastille"/>

    <ImageButton
        android:id="@+id/dalmatianButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_dalmatian"
        android:contentDescription="@string/Dalmatian"/>

    <ImageButton
        android:id="@+id/drakeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dalmatianButton"
        app:srcCompat="@drawable/card_drake"
        android:contentDescription="@string/Drake"/>

    <ImageButton
        android:id="@+id/hinaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/bastilleButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_hina"
        android:contentDescription="@string/Hina"/>

    <ImageButton
        android:id="@+id/smokerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/drakeButton"
        app:layout_constraintTop_toBottomOf="@+id/bastilleButton"
        app:srcCompat="@drawable/card_smoker"
        android:contentDescription="@string/Smoker"/>


    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="drakeButton"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/smokerButton"
        app:layout_constraintTop_toBottomOf="@+id/hinaButton"
        app:srcCompat="@drawable/card_blueno" />

</androidx.constraintlayout.widget.ConstraintLayout>